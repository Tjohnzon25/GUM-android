<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateSchedule">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/gradient_list"
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="1dp">


        <TextView
            android:id="@+id/textView5"
            android:layout_width="321dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:gravity="center_horizontal"
            android:text="Choose the Intensity for your workout!"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/easy_button"
            android:layout_width="320dp"
            android:layout_height="90dp"
            android:layout_marginTop="12dp"
            android:text="easy"
            android:textColor="#000000"
            android:theme="@style/workout_button_easy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />


        <Button
            android:id="@+id/medium_button"
            android:theme="@style/workout_button_medium"
            android:layout_width="320dp"
            android:layout_height="90dp"
            android:layout_marginTop="4dp"
            android:text="Moderate"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/easy_button" />

        <Button
            android:id="@+id/hard_button"
            android:theme="@style/workout_button_hard"
            android:layout_width="320dp"
            android:layout_height="90dp"
            android:layout_marginTop="8dp"
            android:text="Vigorous"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/medium_button" />

        <Button
            android:id="@+id/interval_button"
            android:theme="@style/workout_button_motion"
            android:layout_width="320dp"
            android:layout_height="90dp"
            android:layout_marginTop="4dp"
            android:text="Intervals"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hard_button" />

        <Spinner
            android:id="@+id/spinnerTime"
            style="@style/Widget.AppCompat.Spinner"
            android:layout_width="310dp"
            android:layout_height="?attr/dropdownListPreferredItemHeight"
            android:layout_marginTop="8dp"
            android:background="@drawable/spinner_bg"
            android:dropDownWidth="300dp"
            android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
            android:paddingRight="15dp"
            android:popupBackground="@android:color/white"
            android:popupElevation="3dp"
            android:stateListAnimator="@drawable/spinner_sla"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/interval_button" />

        <Button
            android:id="@+id/start_workout"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginTop="12dp"
            android:text="Begin Workout!"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinnerTime" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>