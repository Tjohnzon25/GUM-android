<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="400dp"
        android:layout_height="220dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/workout" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="321dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="Choose Difficulty"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <Button
        android:id="@+id/start_workout"
        android:layout_width="168dp"
        android:layout_height="70dp"
        android:layout_marginTop="12dp"
        android:text="Start"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hard_button" />

    <Button
        android:id="@+id/easy_button"
        android:theme="@style/workout_button_easy"
        android:layout_width="320dp"
        android:layout_height="90dp"
        android:layout_marginTop="12dp"
        android:text="easy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/hard_button"
        android:theme="@style/workout_button_hard"
        android:layout_width="320dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        android:text="hard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medium_button" />

    <Button
        android:id="@+id/medium_button"
        android:theme="@style/workout_button_medium"
        android:layout_width="320dp"
        android:layout_height="90dp"
        android:layout_marginTop="4dp"
        android:text="medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/easy_button" />


</androidx.constraintlayout.widget.ConstraintLayout>