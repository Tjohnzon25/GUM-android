<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/outline">
    <!--#62def8-->
    <TextView
        android:id="@+id/questionSelected"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Response Text"
        android:textSize="22sp" />


    <TextView
        android:id="@+id/questionTextSelected"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionSelected"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:text="text"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <Button
        android:id="@+id/closeWindowQuestion"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/questionTextSelected"
        android:layout_marginTop="125dp"
        android:layout_marginStart="150dp"
        android:text="Close" />

</RelativeLayout>