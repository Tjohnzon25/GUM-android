<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.499_android" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="android:colorBackground">@color/logo_blue</item>
        <item name="colorPrimary">@color/logo_green</item>
        <item name="android:fontFamily">@font/comfortaa_bold</item>
        <item name="colorPrimaryVariant">@color/logo_black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="timePickerTeal">
        <item name="android:fontFamily">@font/comfortaa_bold</item>
        <item name="colorPrimary">@color/logo_orange</item>
        <item name="android:textColorPrimary">@color/logo_blue</item>
        <item name="android:textColor">@color/logo_blue</item>
        <item name="background">@color/logo_blue</item>
    </style>

    <style name="selectSurveyBtn">
        <item name="android:fontFamily">@font/comfortaa_bold</item>
        <item name="colorPrimary">@color/logo_orange</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="background">@color/black</item>
    </style>

    <style name="workout_button_easy">
        <item name="android:fontFamily">@font/comfortaa_bold</item>
        <item name="colorPrimary">@color/lime_green</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    <style name="workout_button_medium">
        <item name="android:fontFamily">@font/comfortaa_bold</item>
        <item name="colorPrimary">@color/soft_yellow</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    <style name="workout_button_hard">
        <item name="android:fontFamily">@font/comfortaa_bold</item>
        <item name="colorPrimary">@color/logo_red</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="workout_button_motion">
        <item name="android:fontFamily">@font/comfortaa_bold</item>
        <item name="colorPrimary">@color/logo_black</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    <style name="recycler_popup_close">
        <item name="android:fontFamily">@font/comfortaa_bold</item>
        <item name="colorPrimary">@color/orange</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

</resources>